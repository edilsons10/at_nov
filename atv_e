#include <stdio.h>


void bubbleSort(int v[], int n) {
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - 1 - i; j++) {
            if (v[j] > v[j + 1]) {
                temp = v[j];
                v[j] = v[j + 1];
                v[j + 1] = temp;
            }
        }
    }
}


void selectionSort(int v[], int n) {
    int i, j, min, temp;
    for (i = 0; i < n - 1; i++) {
        min = i;
        for (j = i + 1; j < n; j++) {
            if (v[j] < v[min]) {
                min = j;
            }
        }
        temp = v[i];
        v[i] = v[min];
        v[min] = temp;
    }
} 


void insertionSort(int v[], int n) {
    int i, j, chave;
    for (i = 1; i < n; i++) {
        chave = v[i];
        j = i - 1;
        while (j >= 0 && v[j] > chave) {
            v[j + 1] = v[j];
            j--;
        }
        v[j + 1] = chave;
    }
}

int main(void) {
    int vetor[10];
    int i, opcao;

    printf("Digite 10 numeros inteiros:\n");
    for (i = 0; i < 10; i++) {
        printf("Numero %d: ", i + 1);
        scanf("%d", &vetor[i]);
    }

    printf("\nEscolha o algoritmo de ordenacao:\n");
    printf("1 - Bubble Sort (Bsort)\n");
    printf("2 - Selection Sort (Ssort)\n");
    printf("3 - Insertion Sort (Isort)\n");
    printf("Opcao: ");
    scanf("%d", &opcao);

    switch (opcao) {
        case 1:
            bubbleSort(vetor, 10);
            printf("\nVetor ordenado com Bubble Sort:\n");
            break;
        case 2:
            selectionSort(vetor, 10);
            printf("\nVetor ordenado com Selection Sort:\n");
            break;
        case 3:
            insertionSort(vetor, 10);
            printf("\nVetor ordenado com Insertion Sort:\n");
            break;
        default:
            printf("\nOpcao invalida!\n");
            return 0;
    }

    for (i = 0; i < 10; i++) {
        printf("%d ", vetor[i]);
    }
    printf("\n");

    return 0;
}